#!/usr/bin/env bash
# Install nginx server, it should listen to port 80.

apt-get -y update
apt-get install nginx
ufw allow 'Nginx HTTP'
mkdir -p /var/www/html
chmod -R 755 /var/www
echo "Hello World!" > /var/www/html/index.html
if [ "$(pgrep -c nginx)" -le 0]; then
	service nginx start
else
	service nginx restart
fi

